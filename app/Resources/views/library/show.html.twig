{% extends 'base.html.twig' %}

{% block body %}
    <h1>Library</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ library.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ library.name }}</td>
            </tr>
            <tr>
                <th>Releasedate</th>
                <td>{{ library.releaseDate }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ library.length }}</td>
            </tr>
            <tr>
                <th>Genres</th>
                <td>{{ library.genres }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('library_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('library_edit', { 'id': library.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
